<div class="container text-center">
  <h2 class="mb-5 text-35px">{{ section.settings.title }}</h2>
  
  {%- if section.settings.link_text != blank -%}
    <a href="{{ section.settings.link_url }}" class="btn btn-primary d-block d-sm-inline-block">
      {{- section.settings.link_text -}}
    </a>
  {%- endif -%}

  {%- if section.settings.secondary_link_text != blank -%}
    <div class="mt-4 pt-2">
      <a href="{{ section.settings.secondary_link_url }}">
        {{- section.settings.secondary_link_text -}}
      </a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "CTA",
  "tag": "section",
  "class": "cta",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "info": "Optional"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "secondary_link_text",
      "label": "Secondary Button Text",
      "info": "Optional"
    },
    {
      "type": "url",
      "id": "secondary_link_url",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "CTA",
      "category": "New"
    }
  ]
}
{% endschema %}