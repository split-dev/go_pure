<div class="container">
  <div class="about-founder__inner mx-auto text-center">
    {%- if section.settings.title != blank -%}
      <h2 class="mb-4 text-35px">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="text-15px text-dark">
        {{ section.settings.description }}
      </div>
    {%- endif -%}

    <div class="row  mt-4 mt-sm-5">
      {%- if section.settings.image_1 -%}
      <div class="col-sm-6">
        <img data-src="{{ section.settings.image_1 | img_url: '350x' }}"
             alt="{{ section.settings.image_1.alt }}"
             class="lazyload">
      </div>
      {%- endif -%}
      {%- if section.settings.image_2 -%}
        <div class="col-sm-6 mb-4 mb-sm-0 order-first order-sm-0">
          <img data-src="{{ section.settings.image_2 | img_url: '350x' }}"
               alt="{{ section.settings.image_2.alt }}"
               class="lazyload">
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .about-founder {
    background-color: {{ section.settings.bg-color }};
  }
</style>
{% schema %}
{
  "name": "About Founder",
  "tag": "section",
  "class": "about-founder",
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "BG Color"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Subneading"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image #1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image #2"
    }
  ]
}
{% endschema %}