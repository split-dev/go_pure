<div class="features__top">
  <div class="container">
    <div class="features__top__inner mx-auto text-24px text-center">
      {%- if section.settings.icon != blank -%}
        <img class="lazyload mx-auto mb-3 mb-sm-4"
             data-src="{{ section.settings.icon | img_url: 'master' }}" alt="{{ section.settings.icon }}">
      {%- endif -%}
      <div class="pt-3 pb-3 pb-sm-4">
        {{ section.settings.text }}
      </div>
      {%- if section.settings.icon != blank -%}
        <h2 class="text-35px">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
    </div>
  </div>
</div>
<div class="features__bottom bg-info text-light position-relative">
  <div class="container">
    <div class="row justify-content-between">
      <div class="features__bottom__image col absolute-center">
        <img class="d-block mx-auto lazyload"
             data-src="{{ section.settings.image | img_url: '379x344' }}"
             alt="{{ section.settings.image.alt | default: '#' }}">
      </div>

      {%- for block in section.blocks -%}
        <div class="col-lg-6 features__bottom__column">
          <div class="d-flex align-items-start {% cycle '', ' ml-lg-auto' %}">
            <img class="lazyload flex-shrink-0"
                 data-src="{{ block.settings.image | img_url: '54x54' }}"
                 alt="{{ block.settings.image.alt | default: '#' }}">
            <div class="features__bottom__text ml-3 text-15px">
              {{ block.settings.title }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Features",
  "tag": "section",
  "class": "features",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon",
      "info": "Optional"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Optional"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Big Image for bottom part"
    }
  ],
  "blocks": [
    {
      "name": "Feature",
      "type": "IconAndText",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features",
      "category": "New"
    }
  ]
}
{% endschema %}