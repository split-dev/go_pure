<div class="bg-muted text-center bg-center lazyload {% if section.settings.enable_overlay %} overlay{% endif %} overlay--{{ section.id }}"
     data-bgset="{%- render 'bgset', image: section.settings.bg_image -%}">
  <div class="hero__inner">
    <div class="container">
      <div class="flex-center flex-column h-100">
        <h1 class="mb-4 text-light text-56px">{{- section.settings.heading -}}</h1>

        <div class="hero__description mx-auto text-light text-20px">
          {{- section.settings.description -}}
        </div>

        {%- if section.settings.enable_button -%}
          <a class="hero__btn btn btn-primary mt-4 mt-sm-3" href="{{ section.settings.button_link }}">
            {{- section.settings.button_text -}}
          </a>
        {%- endif -%}
      </div>
    </div>
    <div class="hero__icons">
      <div class="container">
        <div class="d-flex align-items-center justify-content-between">
          {%- for block in section.blocks -%}
            <img class="lazyload" data-src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>
{% style %}
  .overlay--{{ section.id }}:after {
    opacity: {{ section.settings.overlay | append: '.0' | divided_by: 100 }};
  }
{% endstyle %}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "BG Image"
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Enable Overlay"
    },
    {
      "type": "range",
      "id": "overlay",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 30,
      "label": "Overlay"
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
       "type": "checkbox",
       "id": "enable_button",
       "label": "Enable Button",
       "default": false
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "New"
    }
  ]
}
{% endschema %}