<div class="container">
  <div class="row">
    <div class="col-sm-6 list-and-img__left">
      <h2 class="text-35px mb-5">{{ section.settings.title }}</h2>
      <ul class="list-unstyled mb-5 pl-0 text-15px font-weight-semibold">
        {% for block in section.blocks %}
          <li class="mt-3 pb-3">{{- block.settings.title -}}</li>
        {% endfor %}
      </ul>
      <a class="btn btn-primary d-none d-sm-inline-block" href="{{ section.settings.button_link }}">
        {{- section.settings.button_text -}}
      </a>
    </div>
    <div class="col-sm-6">
      <div class="d-flex flex-column justify-content-center">
        <div class="list-and-img__img-position">
          <img class="lazyload" data-src="{{ section.settings.img | img_url: '565x' }}" alt="{{ section.settings.img.alt }}">
        </div>
        <a class="btn btn-primary mt-5 d-block d-sm-none" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "List & Image",
  "class": "list-and-img",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "name": "List item",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "List & Image",
      "category": "New"
    }
  ]
}
{% endschema %}