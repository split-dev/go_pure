<div class="container">
  <div class="list-and-img w-100 d-flex flex-wrap">
    <div class="list-and-img__left">
      <h2 class="text-35px mt-4">{{ section.settings.title }}</h2>
      <ul>
        {% for block in section.blocks %}
          <li class="mt-3 pb-3 text-15px">{{ block.settings.list-item }}</li>
        {% endfor %}
      </ul>
      <div class="list-and-img__btn">
        <a class="social__btn btn btn-primary" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
    <div class="list-and-img__right d-flex flex-column justify-content-center">
      <div class="list-and-img__img-position">
        <img src="{{ section.settings.img | img_url: '565x' }}" alt="{{ section.settings.img.alt }}">
      </div>
      <div class="list-and-img__btn d-flex justify-content-center">
        <a class="social__btn btn btn-primary" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "List & Image",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "name": "List item",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "list-item",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "List & Image",
      "category": "New"
    }
  ]
}
{% endschema %}
