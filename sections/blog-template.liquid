{% paginate blog.articles by 4 %}

<div class="container">
  <div class="blog__list">
    <div class="row">
      {% for article in blog.articles %}
        <div class="col-md-6">
          <div class="blog__tile">
            {% if article.image %}
            <a class="blog__tile-img w-100 d-block position-relative" href="{{ article.url }}" style="background-image: url('{{ article.image | img_url: 'master' }}')">
              {% for tag in article.tags %}
                <span class="page-hero__label d-flex justify-content-center align-items-center text-center position-absolute">{{ tag }}</span>
              {% endfor %}
            </a>
            {% endif %}
            <h3 class="text-35px my-3">{{ article.title | escape }}</h3>
            <div class="mb-3 text-dark text-15px">
              {% if article.excerpt.size > 0 %}
                {{ article.excerpt }}
              {% else %}
                {{ article.content | strip_html | truncate: 150 }}
              {% endif %}
            </div>
            <a class="blog__tile-link font-weight-semibold position-relative" href="{{ article.url }}">Read more <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.75 0.833496L5.125 5.00016L0.75 9.16683" stroke="#1675BB" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/></svg></a>
          </div>
        </div>
      {% endfor %}
    </div>
    {%- if paginate.pages > 1 -%}
      <ul class="pagination-custom d-flex justify-content-center align-items-center">
        {% if paginate.previous %}
          <li><a href="{{ paginate.previous.url }}" title="{{ paginate.previous.title }}">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5.25 0.833008L0.875001 4.99967L5.25 9.16634" stroke="#004B83" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a></li>
        {% else %}
          <li class="disabled"><span>
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5.25 0.833008L0.875001 4.99967L5.25 9.16634" stroke="#004B83" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span></li>
        {% endif %}

        {% for part in paginate.parts %}
          {% if part.is_link %}
            <li>
              <a href="{{ part.url }}" title="">{{ part.title }}</a>
            </li>
          {% else %}
            {% if part.title == paginate.current_page %}
              <li class="active"><span>{{ part.title }}</span></li>
            {% else %}
              <li><span>{{ part.title }}</span></li>
            {% endif %}
          {% endif %}
        {% endfor %}

        {% if paginate.next %}
          <li><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.75 0.833008L5.125 4.99967L0.75 9.16634" stroke="#004B83" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a></li>
        {% else %}
          <li class="disabled"><span>
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M0.75 0.833008L5.125 4.99967L0.75 9.16634" stroke="#004B83" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            </span></li>
        {% endif %}
      </ul>
    {%- endif -%}
  </div>

  {% endpaginate %}
</div>





